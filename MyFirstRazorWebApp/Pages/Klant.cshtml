@page
@model MyFirstRazorWebApp.Pages.KlantModel
@{
    var klanten = MyFirstRazorWebApp.Data.Databank.Klanten;
    var rowId = 0;


}
<div class="text-center">
        <h1 class ="display-4">Klanten</h1>
    <p>Dit is onze klanten razor page.</p>
    <a asp-page="NieuweKlant">Nieuwe klant</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">KlantId</th>
        <th scope="col">KlantNaam</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var klant in klanten)
        {
            rowId++;
            <tr>
                <th scope="row">@rowId</th>
                <td>@klant.KlantId</td>
                <td>@klant.KlantNaam</td>
            </tr>

        }
    </tbody>
</table>
