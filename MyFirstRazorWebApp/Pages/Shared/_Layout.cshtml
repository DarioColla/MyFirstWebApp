<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyFirstRazorWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyFirstRazorWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="navpxl">
        <ul>
            <li><a asp-page="/Index">Home</a></li>
            <li><a asp-page="/Klant">Klanten</a></li>
            <li><a asp-page="/Locaties">Locaties</a></li>
            <li><a asp-page="/SelecteerLocatie">SelecteerLocatie</a></li>
            <li><a asp-page="/KlantLocatieOverzicht">KlantLocatie</a></li>
        </ul>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer >
        footer
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>