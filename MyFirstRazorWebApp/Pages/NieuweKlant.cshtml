@page
@model MyFirstRazorWebApp.Pages.NieuweKlantModel
@{
    var locaties = Data.Databank.locaties;
    var selectList = locaties.Select(x =>
    new SelectListItem
    {
        Text = x.Gemeente,
        Value = x.LocatieID.ToString()
    });

}

<form method="post">
    <fieldset>
        <legend>Klant toevoegen</legend>
        <div>
            <label for="Naam">Klantnaam:</label>
            <input type="text" name="Naam" />
            <br />
            <label for="SelectLocatie">Naam locatie</label>
            <select name="SelectLocatie" asp-items="@selectList"></select>
            <label>&nbsp;</label>
            <br />
            <input type="submit" value="Submit" class="submit" />
        </div>
    </fieldset>
</form>

